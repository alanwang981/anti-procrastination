{
  "manifest_version": 3,
  "name": "Anti-Procrastination",
  "version": "2.0",
  "description": "Productivity extension with popup chatbot",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "notifications",
    "https://your-backend-service.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "chatbot.html",
      "chatbot.js",
      "chatbot.css"
    ],
    "matches": ["<all_urls>"]
  }]
}