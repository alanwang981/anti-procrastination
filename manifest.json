{
  "manifest_version": 3,
  "name": "Anti-Procrastination",
  "version": "2.0",
  "description": "Productivity extension with popup chatbot",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "notifications",
    "https://*.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png", 
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "chatbot.html",
      "chatbot.js",
      "chatbot.css",
      "icon.png"
    ],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": [
    "https://*.onrender.com/*"
  ]
}